<Window x:Class="TurkceRumenceCeviri.Views.RomanianListeningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rumence Dinle" Height="520" Width="820"
        WindowStartupLocation="CenterOwner" Background="#F8F9FA">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Rumence Dinle (Fonetik)" FontSize="20" FontWeight="Bold" Foreground="#1A1A1A"/>
            <TextBlock x:Name="StatusText" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="#0078D4"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,12">
            <Button x:Name="StartButton" Content="Baslat" Click="StartButton_Click" Width="130" Height="34" Margin="0,0,10,0" Background="White" BorderBrush="#CCCCCC" BorderThickness="2" FontWeight="Bold"/>
            <Button x:Name="StopButton" Content="Durdur" Click="StopButton_Click" Width="130" Height="34" Margin="0,0,10,0" Background="White" BorderBrush="#CCCCCC" BorderThickness="2" FontWeight="Bold" IsEnabled="False"/>
            <Button Content="Temizle" Click="ClearButton_Click" Width="120" Height="34" Margin="0,0,10,0" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="2" FontWeight="Bold"/>
            <Button Content="Okunusu Kopyala" Click="CopyPhoneticButton_Click" Width="150" Height="34" Background="#0078D4" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Turkce Okunusu (Fonetik)" FontSize="14" FontWeight="Bold" Foreground="#2E7D32"/>
            <TextBox x:Name="PhoneticTextBox" Grid.Row="1" Margin="0,6,0,12" AcceptsReturn="True" TextWrapping="Wrap" FontSize="16" Background="#F1F8E9" BorderBrush="#DCDCDC" BorderThickness="1" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>

            <TextBlock Grid.Row="2" Text="Rumence (Mikrofondan)" FontSize="14" FontWeight="Bold" Foreground="#1565C0"/>
            <TextBox x:Name="RomanianTextBox" Grid.Row="3" Margin="0,6,0,0" AcceptsReturn="True" TextWrapping="Wrap" FontSize="14" Background="#FFFFFF" BorderBrush="#DCDCDC" BorderThickness="1" VerticalScrollBarVisibility="Auto"/>
        </Grid>
    </Grid>
</Window>
