<Window x:Class="TurkceRumenceCeviri.Views.PhoneticResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Metin Görüntüleyici" Height="500" Width="700" 
        WindowStartupLocation="CenterOwner" Background="#F8F9FA">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Üst Bilgi -->
        <TextBlock Text="Metni düzenleyebilir, dönüştürebilir ve kopyalayabilirsiniz:" Margin="0,0,0,10" FontWeight="Bold" Foreground="#333" FontSize="14"/>

        <!-- Metin Kutusu -->
        <TextBox x:Name="MainTextBox" Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto"
                 FontSize="18"
                 FontFamily="Segoe UI"
                 FontWeight="Normal"
                 Padding="12"
                 Background="White"
                 BorderBrush="#CCCCCC"
                 BorderThickness="1"
                 AcceptsReturn="True"/>

        <!-- Alt Butonlar -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Sol taraf -->
                <ColumnDefinition Width="Auto"/>
                <!-- Sağ taraf -->
            </Grid.ColumnDefinitions>

            <!-- Sol: Fonetik Dönüştür -->
            <Button Grid.Column="0" Content="🔊 FONETİK (OKUNUŞ)" x:Name="PhoneticBtn" Click="PhoneticBtn_Click" 
                    HorizontalAlignment="Left" Width="180" Height="40" 
                    Background="#FFC107" Foreground="Black" FontWeight="Bold" FontSize="14" Cursor="Hand"
                    BorderThickness="0"/>

            <!-- Sağ: Kopyala ve Kapat -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="KOPYALA" x:Name="CopyBtn" Click="CopyBtn_Click" 
                        Width="120" Height="40" Margin="0,0,10,0" 
                        Background="#0078D4" Foreground="White" FontWeight="Bold" Cursor="Hand" BorderThickness="0"/>

                <Button Content="KAPAT" IsCancel="True" 
                        Width="100" Height="40" 
                        Background="#DDDDDD" Foreground="#333" FontWeight="Bold" Cursor="Hand" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>